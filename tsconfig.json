{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        // if using webpack 2+ or rollup, to leverage tree shaking:
        "module": "es2015",
        "moduleResolution": "node",
        // to use decorators in vue
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}
